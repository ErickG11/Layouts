<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Layouts.GridLayoutPage"
             Title="GridLayoutPage">

    <Grid>
        <Grid RowDefinitions="*,*" ColumnDefinitions="*,*">

            <BoxView Grid.Row="0" Grid.Column="0" Color="red"/>
            <BoxView Grid.Row="0" Grid.Column="1" Color="blue"/>
            <BoxView Grid.Row="1" Grid.Column="0" Color="green"/>
            <BoxView Grid.Row="1" Grid.Column="1" Color="orange"/>

        </Grid>
        
        <Button Grid.Column="2" Grid.ColumnSpan="2"
            Text="Pasa al stack pa"
            TextColor="Black"
            BackgroundColor="White"
            CornerRadius="30"
            HorizontalOptions="End"
            VerticalOptions="End"
            Clicked="OnClickedButton"
            />
 
    </Grid>

</ContentPage>